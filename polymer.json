{
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "extraDependencies": [
    "node_modules/ace-builds/src-min-noconflict/theme-eclipse.js",
    "docs/*.md",
    "./manifest.json"
  ],
  "builds": [
    {
      "name": "default", 
      "basePath": "/gherkin-editor/",
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true,
      "addPushManifest": false
    }
  ]
}
